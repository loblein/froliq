@import './variables';

.hero {
  width: 100%;
  height: 600px;
  position: relative;
  background-image: url(<%= asset_path 'background2.jpg' %>);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: inset -20px -60px 250px -10px black;
}

.hero-image {
  display: block;
}

.upper-hero-spacer {
  height: 3px;
  border-top: 1px solid $gray;
  background-color: $transparent-gray;
  width: 100%;
}

.lower-hero-spacer {
  height: 4px;
  background-color: $transparent-darkest-gray;
  width: 100%;
  position: absolute;
  bottom: 0;
}

.lower-spacer-main-page {
  height: 5px;
  background-color: $gray;
  width: 100%;
  box-shadow: inset 0 1px 1px 2px rgb(20, 20, 20),
   inset 0 2px 2px $darkest-gray;
}

.hero-lower-third {
  text-align: center;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-image: url(<%= asset_path 'frog_jump_to_lily.png' %>);
  background-position: center;
  background-repeat: no-repeat;
  height: 120px;
  width: 550px;
  opacity: 0.8;
}

.identity {
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 43%;
    left: 50%;
    transform: translate(-50%, -50%);
    height: 120px;
    width: 260px;
}

.identity h1 {
  font-size: 39px;
  font-weight: 300;
  color: $cloud-white;
  font-family: $satisfy;
}

.slogan {
  position: relative;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  margin-top: 10px;
}

.slogan img {
  padding-left: 10px;
  padding-right: 10px;
  opacity: 0.8;
}

.slogan h2 {
  font-family: $satisfy;
  color: white;
  padding: 15px;
  font-size: 25px;
}
