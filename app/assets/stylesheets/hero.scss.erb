@import './variables';

.hero {
  width: 100%;
  height: 600px;
  position: relative;
  background-image: url(<%= asset_path 'background2.jpg' %>);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: inset -20px -60px 250px -10px #000;
}

.hero-image {
  display: block;
}

.upper-hero-spacer {
  height: 3px;
  border-top: 1px solid $gray;
  background-color: $transparent-gray;
  width: 100%;
}

.lower-hero-spacer {
  height: 4px;
  background-color: $transparent-darkest-gray;
  width: 100%;
  position: absolute;
  bottom: 0;
}

.lower-spacer-main-page {
  height: 5px;
  background-color: $gray;
  width: 100%;
  box-shadow: inset 0 1px 1px 2px rgb(20, 20, 20),
   inset 0 2px 2px $darkest-gray;
}

.hero-lower-third {
  text-align: center;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 220px;
  width: 710px;
}

.hero-lower-third img {
  width: 220px;
  height: 140px;
  border-radius: 29px;
  background-color: rgba(255, 255, 255, 1);
  border: 1px solid rgba(255, 255, 255, .8);
  padding: 2px;
  cursor: pointer;
}

.hero-lower-third h4 {
  font-weight: 200;
  font-family: $open-sans;
  width: 226px;
  font-size: 18px;
  color: rgba(255, 255, 255, .8);
  line-height: 6px;
  padding: 10px;
}
