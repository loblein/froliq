@import './variables';

.pitch {
  background-color: $off-white;
  padding: 0;
  margin: 0;
}


.pitch .pitch-column {
  margin: 0;
  padding: 0;
}

.pitch .super-header {
  width: 100%;
  padding: 0;
  background: white;
  border-top: 1px solid $transparent-green;
  border-bottom: 1px solid $transparent-green;
}

.pitch .super-header h2 {
  margin: 0;
  color: $green;
  font-family: $satisfy;
  padding: 5px;
  text-align: center;
}

.pitch-item-container {
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25px;
}

.pitch-column .pitch-item {
  border-radius: 36px;
  width: 100%;
  border: 1px solid $light-gray;
  padding: 10px;
  background-color: white;
  margin: 5px 5px 20px 5px;
  max-width: 800px;
}

.pitch-column .pitch-item img {
  float: left;
  padding-right: 10px;
}

.pitch-column .pitch-item h3 {
  text-align: center;
  min-width: 220px;
  margin: 5px 200px 5px 220px;
  font-family: 'Satisfy', cursive;
}

.pitch header {
  margin: 0 auto;
  height: 200px;
  margin-top: 20px;
  margin-bottom: 20px;
}

.pitch header .traveler-header {
  background-image: url(<%= asset_path 'frog.png' %>);
  background-size: cover;
  background-color: $cloud-white;
  height: 100%;
  width: 200px;
  margin: 0 auto;
  padding: 0;
  border-radius: 100%;
  border: 1px solid $green;
  box-shadow: 0 0 30px 5px white;
}

.pitch header .employer-header {
  background-image: url(<%= asset_path 'lily.png' %>);
  background-size: cover;
  background-color: $cloud-white;
  height: 100%;
  width: 200px;
  margin-bottom: 0;
  margin: 0 auto;
  padding: 0;
  border-radius: 100%;
  border: 1px solid $green;
  box-shadow: 0 0 30px 5px white;
}

.pitch p {
  padding: 4px;
}

.text-center {
  margin: 10px;
  padding: 10px;
  width: 100%;
  text-align: center;
}
