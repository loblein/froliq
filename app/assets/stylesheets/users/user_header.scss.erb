@import '../variables';

.user-header-container {
  display: block;
  position: relative;
  height: 120px;
  width: 100%;
  background-color: white;
}

.upper-spacer {
  box-shadow: inset 0 1px 1px $gray,
    inset 0 2px 2px $middle-gray;
  height: 5px;
  background-color: $light-gray;
  width: 100%;
}

.lower-spacer {
  height: 5px;
  background-color: $light-gray;
  width: 100%;
  box-shadow: inset 0 1px 1px $gray,
    inset 0 2px 2px $middle-gray;
}

.user-header {
  display: flex;
  justify-content: flex-start;
  margin: 0 auto;
  width: 100%;
  height: 100%;
}

.user-avatar-container {
  width: 168px;
  height: 146px;
  position: absolute;
  top: 16px;
  left: 17px;
  border: 1px solid $highlight-gray;
  border-radius: 25px;
  background-color: rgb(250, 250, 250);
  z-index: 2;
  box-shadow: 0 0 0 16px white;
  background-size: cover;
  background-image: url(<%= asset_path 'frog_sitting.png' %>);
}

.user-details-container {
  height: 100%;
  margin-left: 180px;
  width: 300px;
}

.user-details {
  padding: 10px;
  height: 100%;
  width: 100%;
  min-width: 200px;
  color: $dark-gray;
}

.user-details h3 {
  margin: 0;
  padding: 5px;
  font-family: $open-sans;
}

.user-details h5 {
  margin: 0;
  padding: 5px;
  font-family: $open-sans;
}

.user-details h6 {
  margin: 0;
  padding: 5px;
  color: gray;
  font-family: $open-sans;
}

.user-star-rating {
  position: absolute;
  bottom: 10px;
  height: 30px;
  width: 200px;
  line-height: 30px;
}

.user-star-rating h3 {
  color: $blue;
  padding: 3px;
  margin: 0;
  font-size: 30px;
}

.user-star-rating .fa-star {
  color: $blue;
  padding: 5px;
  font-size: 18px;
}

.user-blurb-container {
  padding: 10px;
  height: 100%;
}

.user-blurb h4 {
  color: $blue;
  font-weight: 400;
  margin: 0;
  padding: 0 0 5px 0;
}

.user-blurb {
  padding-left: 20px;
  min-width: 240px;
  border-left: 1px solid $light-gray;
  height: 100px;
  height: 100%;
  color: $gray;
  font-weight: 400;
}

a, a:hover, a:visited, a:active {
  text-decoration: none;
}
