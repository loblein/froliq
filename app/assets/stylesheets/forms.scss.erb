@import './variables';

.background-reset {
  background-color: #efefef;
}

.flex-container h3, p {
  color: #4c4c4c;
  padding: 10px;
  font-family: helvetica;
}

.standard-form-container {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.standard-form {
  border: 1px solid white;
  background-color: $cloud-white;
  border-radius: 25px;
  padding: 10px;
}

.sub-form-content {
  position: absolute;
  bottom: 130px;
  width: 100%;
  text-align: center;
  color: white;
}

.sub-form-content a {
  color: $highlight-blue;
}

.sub-form-content a:hover {
  text-decoration: none;
  color: $highlight-blue;
}

.back-button {
  position: absolute;
  width: 100%;
  text-align: center;
  bottom: 60px;
}

.back-button a {
  color: $highlight-blue;
}

.back-button a:hover {
  color: $highlight-blue;
  text-decoration: none;
  cursor: pointer;
}

.traveler-form {
  width: 300px;
}

.employer-form {
  width: 300px;
  border: 1px solid red;
}

.session-form {
  width: 350px;
  display: block;
}

.standard-form input {
  outline: none;
  text-indent: 2px;
  width: 100%;
  border-radius: 6px;
  padding: 10px;
  margin: 0 auto;
  border: 1px solid $light-gray;
  color: #434741;
  background-color: white;
}

.standard-form label {
  width: 100%;
}

.standard-form h3 {
  display: block;
  text-align: center;
  width: 100%;
  padding: 10px;
  margin: 0 auto;
  font-size: 26px;
  color: $blue;
  font-family: 'Satisfy', cursive;
}

.standard-form .center-button {
  width: 100%;
  padding: 10px;
  background-color: transparent;
  text-align: center;
}

.standard-form .submit-button {
  width: 100px;
}

.standard-form .submit-button:hover {
  background-color: $blue;
  border: 1px solid $gray;
  color: white;
}
