$light-green: #AEFF59;
$green: #73b52d;
$dark-green: #3D6810;

$light-blue: #729ACE;
$blue: #3B5A82;

$light-gray: rgb(200, 200, 200);

$satisfy: 'Satisfy', cursive;
$josefin: 'Josefin Sans', sans-serif;
$open-sans: 'Open Sans', sans-serif;

.background-reset {
  background-color: #efefef;
}

.flex-container h3, p {
  color: #4c4c4c;
  padding: 10px;
  font-family: helvetica;
}

.standard-form-container {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.standard-form {
  border: 1px solid white;
  background-color: rgba(255, 255, 255, .9);
  border-radius: 25px;
  padding: 10px;
}

.sub-form-content {
  position: absolute;
  bottom: 130px;
  width: 100%;
  text-align: center;
  color: white;
}

.sub-form-content a {
  color: $light-blue;
}

.sub-form-content a:hover {
  text-decoration: none;
  color: $light-blue;
}

.traveler-form {
  width: 300px;
}

.session-form {
  width: 350px;
  display: block;
}

.standard-form input {
    outline: none;
    text-indent: 2px;
    width: 100%;
    border-radius: 6px;
    padding: 10px;
    margin: 0 auto;
    border: 1px solid #c3c3c3;
    color: #434741;
    background-color: rgba(255, 255, 255, 0.8);
}

.standard-form label {
  width: 100%;
}

.standard-form h3 {
  display: block;
  text-align: center;
  width: 200px;
  padding: 10px;
  margin: 0 auto;
  font-size: 26px;
  color: #3b5982;
  font-family: 'Satisfy', cursive;
}

.standard-form .center-button {
  width: 100%;
  padding: 10px;
  text-align: center;
}

.standard-form .submit-button {
  width: 100px;
}

.standard-form .submit-button:hover {
  background-color: #3b5982;
  border: 1px solid #828e92;
  color: white;
}
