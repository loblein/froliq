@import './variables';

.sign-up-log-in {
  width: 100%;
  height: 600px;
  position: relative;
  background-image: url(<%= asset_path 'background10.jpg' %>);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: inset -20px -60px 250px -10px #000;
}

.bi-fold-container {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  padding-top: 110px;
  padding-bottom: 30px;
}

.bi-fold-item {
  height: 230px;
  width: 190px;
  text-align: center;
  background-color: rgba(255, 255, 255, .9);
  border: 1px solid white;
  display: flex;
  justify-content: center;
  flex-direction: column;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, .1);
  border-radius: 25px;
}

.bi-fold-item h3 {
  color: $blue;
  text-align: center;
  font-family: $open-sans;
  font-size: 26px;
  font-weight: 300;
  padding: 0;
  margin: 17px 0 17px 0;
}

.frog-button {
  cursor: pointer;
  height: 100px;
  color: $light-gray;
  background-color: white;
  background-image: url(<%= asset_path 'frog.png' %>);
  background-size: cover;
  background-position: center center;
  border-radius: 10px;
  width: 140px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
}

.fa-arrow-up:hover {
  color: $blue;
}

.fa-arrow-down:hover {
  color: $blue;
}

.lily-button {
  cursor: pointer;
  height: 100px;
  color: $light-gray;
  background-color: white;
  background-image: url(<%= asset_path 'lily.png' %>);
  background-size: cover;
  background-position: center center;
  border-radius: 10px;
  width: 140px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
}

.sign-up-log-in .text-white {
  color: white;
}

.choose-path {
  height: 60px;
  padding-bottom: 20px;
}

.choose-path h3 {
  margin: 0;
  font-size: 36px;
  font-family: 'Satisfy', cursive;
}
