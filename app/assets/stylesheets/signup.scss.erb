
$light-green: #AEFF59;
$green: #73b52d;
$dark-green: #3D6810;

$light-blue: #729ACE;
$blue: #3B5A82;

$light-gray: rgb(200, 200, 200);

$satisfy: 'Satisfy', cursive;
$josefin: 'Josefin Sans', sans-serif;
$open-sans: 'Open Sans', sans-serif;


.sign-up-log-in {
  width: 100%;
  height: 600px;
  position: relative;
  background-image: url(<%= asset_path 'background10.jpg' %>);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: inset -20px -60px 250px -10px #000;
}

.inspect {
}

.bi-fold-container {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  padding-top: 110px;
  padding-bottom: 30px;
}

.bi-fold-item {
  height: 210px;
  width: 160px;
  text-align: center;
  background-color: rgba(255, 255, 255, .9);
  border: 1px solid white;
  display: flex;
  justify-content: center;
  flex-direction: column;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, .1);
  border-radius: 25px;
}

.bi-fold-item h3 {
  color: $blue;
  text-align: center;
  font-family: $open-sans;
  font-size: 26px;
  font-weight: 300;
  padding: 0;
  margin: 17px 0 17px 0;
}

.fa-arrow-up {
  cursor: pointer;
  color: $light-gray;
  background-color: white;
  border-radius: 10px;
  width: 140px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
}

.fa-arrow-up:hover {
  color: $blue;
}

.fa-arrow-down:hover {
  color: $blue;
}

.fa-arrow-down {
  cursor: pointer;
  color: $light-gray;
  margin: 0 auto;
  background-color: white;
  border-radius: 10px;
  width: 140px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
}

.sign-up-log-in .text-white {
  color: white;
}

.choose-path {
  height: 60px;
  padding-bottom: 20px;
}

.choose-path h3 {
  margin: 0;
  font-size: 36px;
  font-family: 'Satisfy', cursive;
}

/* Forms */

.standard-form-container {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.standard-form {
  border: 1px solid white;
  background-color: rgba(255, 255, 255, .9);
  border-radius: 25px;
  padding: 10px;
}

.traveler-form {
  width: 300px;
}

.standard-form input {
    outline: none;
    text-indent: 2px;
    width: 100%;
    border-radius: 6px;
    padding: 10px;
    margin: 0 auto;
    border: 1px solid #c3c3c3;
    color: #434741;
    background-color: rgba(255, 255, 255, 0.8);
}

.standard-form label {
  width: 100%;
}

.standard-form h3 {
  display: block;
  text-align: center;
  width: 200px;
  padding: 10px;
  margin: 0 auto;
  font-size: 26px;
  color: #3b5982;
  font-family: 'Satisfy', cursive;
}

.standard-form .center-button {
  width: 100%;
  padding: 10px;
  text-align: center;
}

.standard-form .submit-button {
  width: 100px;
}

.standard-form .submit-button:hover {
  background-color: #3b5982;
  border: 1px solid #828e92;
  color: white;
}
