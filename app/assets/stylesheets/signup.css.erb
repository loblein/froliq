/* SIGN UP PAGE */

.sign-up {
  width: 100%;
  height: 600px;
  position: relative;
  background-image: url(<%= asset_path 'background10.jpg' %>);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: inset -20px -60px 250px -10px #000;
}

.phase-one {

}

.inspect {
  border: 1px solid red;
}

.bi-fold-container {
  display: flex;
  width: 100%;
  justify-content: space-around;
  align-items: center;
  padding-top: 110px;
  padding-bottom: 30px;
}

.bi-fold-item {
  height: 210px;
  width: 160px;
  text-align: center;
  background-color: rgba(255, 255, 255, .9);
  border: 1px solid white;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, .1);
  border-radius: 25px;
}

.bi-fold-item h3 {
  color: #434741;
  text-align: center;
  font-family: helvetica;
  font-size: 22px;
  padding: 8px;
  font-weight: 600;
}

.bi-fold-item h2 {
  color: #434741;
  text-align: center;
  font-family: helvetica;
  font-size: 22px;
  padding: 0;
  font-weight: 600;
}

.fa-arrow-up {
  cursor: pointer;
  color: #434741;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 10px;
  width: 140px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
}

.fa-arrow-down {
  cursor: pointer;
  color: #434741;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 10px;
  width: 140px;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
}

.sign-up .text-white {
  color: white;
}

.choose-path {
  height: 60px;
  padding-bottom: 20px;
}

.choose-path h3 {
  margin: 0;
  font-size: 36px;
  font-family: 'Satisfy', cursive;
}

/* Traveler Form */

.traveler-form-container {
  height: 100%;
  justify-content: center;
  align-items: center;
}

.employer-form-container {
  height: 100%;
  justify-content: center;
  align-items: center;
}

.traveler-form {
  border: 1px solid white;
  height: 400px;
  background-color: rgba(255, 255, 255, .9);
  border-radius: 25px;
  padding: 10px;
  width: 300px;
}

.traveler-form input {
    outline: none;
    text-indent: 2px;
    width: 100%;
    border-radius: 6px;
    padding: 10px;
    margin: 0 auto;
    border: 1px solid #c3c3c3;
    color: #434741;
    background-color: rgba(255, 255, 255, 0.8);
}

.traveler-form label {
  width: 100%;
}

.traveler-form h3 {
  display: block;
  text-align: center;
  width: 200px;
  padding: 10px;
  margin: 0 auto;
  font-size: 26px;
  color: #434741;
  font-family: 'Satisfy', cursive;
}
