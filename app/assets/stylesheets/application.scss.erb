 @import './variables';

 html, body {
   border: 0;
   margin: 0;
   padding: 0;

   color: white;
   font-family: inherit;
   background-color: $off-white;

   box-sizing: border-box;
   min-height: 100%;
 }

 body {
   margin-bottom: 50px;
 }

 .off-white {
   background-color: $off-white;
 }

 .red-outline {
   border: 1px solid red;
 }

 div {
   background-color: inherit;
 }

 *, *:before, *:after {
   box-sizing: inherit;
 }

 ul {
   padding: 0;
   list-style-type: none;
 }

 .flex-container {
   display: flex;
   justify-content: center;
 }

 .hero {
   width: 100%;
   height: 600px;
   position: relative;
   background-image: url(<%= asset_path 'background2.jpg' %>);
   background-position: center center;
   background-repeat: no-repeat;
   background-size: cover;
   box-shadow: inset -20px -60px 250px -10px #000;
 }

 .hero-image {
   display: block;
 }

 .hero .upper-spacer {
   box-shadow: inset 0 1px 1px $dark-gray,
     inset 0 2px 1px $shadow-gray;
   height: 1px;
   background-color: $middle-gray;
   width: 100%;
   border-top: 1px solid $gray;
 }

 .hero .lower-spacer {
   height: 5px;
   background-color: $middle-gray;
   width: 100%;
   box-shadow: inset 0 1px 1px $gray,
     inset 0 2px 2px $middle-gray;
 }

 .lower-spacer-main-page {
   height: 5px;
   background-color: $gray;
   width: 100%;
   box-shadow: inset 0 1px 1px 2px rgb(20, 20, 20),
    inset 0 2px 2px $darkest-gray;
 }

 .hero-lower-third {
   text-align: center;
   display: flex;
   justify-content: space-around;
   align-items: center;
   position: absolute;
   top: 80%;
   left: 50%;
   transform: translate(-50%, -50%);
   height: 220px;
   width: 710px;
 }

 .hero-lower-third img {
   width: 220px;
   height: 140px;
   border-radius: 29px;
   background-color: rgba(255, 255, 255, .8);
   border: 1px solid rgba(255, 255, 255, .8);
   padding: 2px;
 }

 .hero-lower-third h4 {
   font-weight: 200;
   font-family: $open-sans;
   width: 226px;
   font-size: 18px;
   color: rgba(255, 255, 255, .8);
   line-height: 6px;
   padding: 10px;
 }

.searchbar-label {
  font-weight: 400;
  color: rgba(255, 255, 255, .8);
 }

 .clearfix:after {
   display: block;
   content: '';
   clear: both;
 }
