 @import './variables';

 html, body {
   border: 0;
   margin: 0;
   padding: 0;

   color: white;
   font-family: inherit;
   background-color: $off-white;

   box-sizing: border-box;
   min-height: 100%;
 }

 body {
   margin-bottom: 50px;
 }

 .off-white {
   background-color: $off-white;
 }

 .red-outline {
   border: 1px solid red;
 }

 div {
   background-color: inherit;
 }

 *, *:before, *:after {
   box-sizing: inherit;
 }

 ul {
   padding: 0;
   list-style-type: none;
 }

 .flex-container {
   display: flex;
   justify-content: center;
 }

.searchbar-label {
  font-weight: 400;
  color: rgba(255, 255, 255, .8);
 }

 .clearfix:after {
   display: block;
   content: '';
   clear: both;
 }

 .blue-outline {
   border: 1px solid blue;
 }
