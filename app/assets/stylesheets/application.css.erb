 html, body {
   border: 0;
   margin: 0;
   padding: 0;

   font-family:
     -apple-system,
     BlinkMacSystemFont,
     Segoe UI, Roboto,
     Oxygen-sans, Ubuntu,
     Cantarell, Helvetica Neue,
     sans-serif;

   color: white;
   background-color: #efefef;
 }

 .root-header {
   background-color: transparent;
   padding: 4px 0 4px 10px;
 }

 .root-header h2 {
   color: white;
 }

 .root-header a {
   color: white;
   text-decoration: none;
 }

 .root-header a:hover {
   text-decoration: none;
   color: #e5e5e5;
 }

 .sleak-input {
   display: block;
   width: 400px;
   border-radius: 5px;
   padding: 5px;
   border: 5px solid white;
   transition: border 0.3s;
   color: gray;
   background-color: rgba(255, 255, 255, .6);
 }

 .sleak-input:focus {
   background-color: white;
   outline-color: transparent;
   outline-style: none;
 }

 .header-menu {
   float: right;
   padding: 10px;
   margin: 14px 5px 0 0;
 }

 .searchbar-label {
   font-family: sans-serif;
   font-weight: 400;
   letter-spacing: 1.5px;
   font-size: 16px;
   display: block;
   text-align: left;
 }

 .logo {
   float: left;
   font-family: 'Satisfy', cursive;
   font-size: 20em;
   padding: 6px;
   text-align: center;
   width: 160px;
 }

 .hero {
   width: 100%;
   height: 680px;
   position: relative;
   background-image: url(<%= asset_path 'background.jpg' %>);
   background-position: center bottom;
   background-repeat: no-repeat;
   background-size: cover;
   box-shadow: inset -20px -60px 250px -10px #000;
 }

 .hero-text {
   text-align: center;
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%, -50%);
   color: white;
 }

 .hero-lower-third {
   text-align: center;
   display: flex;
   justify-content: space-around;
   align-items: center;
   position: absolute;
   top: 80%;
   left: 50%;
   transform: translate(-50%, -50%);
   height: 220px;
   width: 700px;
 }

 .hero-lower-third img {
   width: 220px;
   height: 140px;
   border-radius: 29px;
   background-color: rgba(255, 255, 255, 1);
   border: 1px solid white;
   padding: 2px;
 }

 .hero-lower-third h4 {
   font-weight: 500;
   width: 226px;
   color: white;
   line-height: 6px;
   padding: 10px;
 }

 .pitch {
   height: 600px;
   background-color: #efefef;
 }

 .pitch section {
   border-radius: 36px;
   border: 1px solid #d3d3d3;
   padding: 10px;
   background-color: white;
   margin: 10px;
 }

 .pitch section img {
   float: left;
   padding-right: 10px;
 }

 .pitch section h3 {
   text-align: center;
   padding-right: 100px;
   font-family: 'Satisfy', cursive;
 }

 .pitch section p {
   padding: 4px;
 }

 .pitch-sub-heading {
   font-family: 'Satisfy', cursive;
   text-align: center;
   font-size: 3em;
 }

 .text-center {
   margin: 10px;
   padding: 10px;
   width: 100%;
   text-align: center;
 }

 .pitch-heading {
   font-family: 'Satisfy', cursive;
   font-size: 4em;
 }

 .clearfix:after {
   display: block;
   content: '';
   clear: both;
 }

 a {
   text-decoration: none;
   color: white;
 }
