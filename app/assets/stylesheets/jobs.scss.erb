@import './variables';

// job list //

.opportunities-container {
 width: 100%;
 margin: 0;
 padding: 0;
}

.opportunities {
 margin: 0;
 padding: 10;
 width: 100%;
 height: auto;
}

.job-item {
 padding: 10px;
 margin-bottom: 10px;
 border: 1px solid $light-gray;
 background-color: transparent;
 width: 100%;
 box-sizing:border-box;
 height: 110px;
 border-radius: 20px;
 list-style: none;
 text-indent: 0;
 cursor: pointer;
 transition: height 300ms, border 300ms;
 overflow: hidden;
}

.job-item.expand {
  height: 320px;
  border: 1px solid $green;
}

.job-item h4, h5 {
 color: $blue;
 display: inline;
 margin-right: 5px;
}

.job-item h5 {
 color: #8ead45;
}

.job-item p {
 margin: 0;
 padding: 5px;
}

.job-item .img-container {
 float: left;
 height: 90px;
 width: 120px;
 margin-right: 10px;
 border-radius: 15px;
 color: $off-white;
 background-color: $off-white;
 background-image: url(<%= asset_path 'lily.png' %>);
 background-size: cover;
 background-position: center center;
}

.job-item .headline {
  height: 110px;
  display: block;
}

.job-item .item-details {
  background-color: $highlight;
  border-radius: 10px;
  height: 120px;
  padding: 10px;
}

.job-item .button-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70px;
}

.job-item button.apply {
  font-family: $open-sans;
  font-size: 16px;
  width: 270px;
  height: 40px;
  color: white;
  background-color: $blue;
  border-radius: 10px;
  border: none;
  outline: none;
  color: white;
}

.job-item .item-details h4, h5 {
  font-weight: bold;
  color: $gray;
}

.job-item .item-details p {
  color: $gray;
  padding: 10px 0;
}

.job-item .employer-star-rating {
  display: inline;
}

.job-item .employer-star-rating .fa-star {
  color: $blue;
  padding: 5px;
  font-size: 18px;
}
